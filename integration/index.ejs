<%- include('partials/header') %>

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <h1 class="content-title">Les actualités du blog</h1>
        <div class="pure-g">

          <% articles.forEach(element => { %>

            <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
              <header>
                <img class="card-img pure-img" src="images/<%= element.img %>" alt="<%= element.img_alt  %>">
                <h2><%= element.title %></h2>
                <div class="card-meta">
                  Par <a href="#"><%= element.author %></a> 
                  dans la catégorie <a href="article?category=<%= element.category %>"><%= element.category %></a>
                </div>
              </header>
              <p>

                <%
                  let textArray = element.text.split(' ')
                  if(textArray.length > 30){
                    textArray = textArray.slice(0, 30)
                  }
                  let textShort = textArray.join(' ')
                %>
                <%= textShort %>...

              </p>
              <a class="card-action pure-button" href="article/<%= element.id %>">Lire l'article</a>
            </article>

          <% }) %>

<%- include('partials/footer') %>