<%- include('partials/header.ejs') %>

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <div class="pure-g">


          <article class="post pure-u-1">
            <header>
              <h1><%= element.title %></h1>
              <div class="post-meta">
                Par <a href="#"><%= element.author %></a> 
                dans la catégorie <a href="../article?category=<%= element.category %>"><%= element.category %></a>
              </div>
            </header>
            <figure class="post-picture">
              <img class="pure-img" src="/images/<%= element.img %>" alt="<%= element.img_alt %>">
              <figcaption class="post-picture-caption"><%= element.sub_title %></figcaption>
            </figure>
            <div class="post-content">
              <p><%= element.text %></p>
            </div>
            <footer>
              <a class="pure-button" href="/">Retour à l'accueil</a>
            </footer>
          </article>

<%- include('partials/footer') %>